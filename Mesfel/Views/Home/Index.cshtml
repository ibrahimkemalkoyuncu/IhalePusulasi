@model DashboardViewModel
@{
    ViewData["Title"] = "Dashboard";
}

<!-- Page Header -->
<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1 class="h3 mb-0 text-gray-800">
            <i class="fas fa-tachometer-alt me-2 text-primary"></i>
            Dashboard
        </h1>
        <p class="text-muted">İhale analiz sistemi genel durumu</p>
    </div>
    <div>
        <button class="btn btn-primary" onclick="refreshDashboard()">
            <i class="fas fa-sync-alt me-2"></i>
            Yenile
        </button>
    </div>
</div>

<!-- Stats Cards -->
<div class="row mb-4">
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-primary shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                            Toplam İhale
                        </div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">
                            @(Model?.AktifIhaleler.Count() ?? 0)
                        </div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-clipboard-list fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-success shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                            Aktif İhale
                        </div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">
                            @(Model?.AktifIhaleler.Count() ?? 0)
                        </div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-check-circle fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-info shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                            Toplam Teklif
                        </div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">
                            @* @(Model?.ToplamTeklif ?? 0) *@
                        </div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-hand-holding-usd fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-warning shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                            Toplam Değer
                        </div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">
                            @* @(Model?.ToplamDeger?.ToString("C") ?? "₺0") *@
                        </div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-dollar-sign fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Charts Row -->
<div class="row mb-4">
    <!-- İhale Trend Chart -->
    <div class="col-xl-8 col-lg-7">
        <div class="card shadow mb-4">
            <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                <h6 class="m-0 font-weight-bold text-primary">
                    <i class="fas fa-chart-line me-2"></i>
                    İhale Trend Analizi
                </h6>
                <div class="dropdown no-arrow">
                    <select class="form-select" id="trendPeriod" onchange="updateTrendChart()">
                        <option value="7">Son 7 Gün</option>
                        <option value="30" selected>Son 30 Gün</option>
                        <option value="90">Son 90 Gün</option>
                    </select>
                </div>
            </div>
            <div class="card-body">
                <div class="chart-area">
                    <canvas id="trendChart" width="100%" height="40"></canvas>
                </div>
            </div>
        </div>
    </div>

    <!-- Kategori Distribution -->
    <div class="col-xl-4 col-lg-5">
        <div class="card shadow mb-4">
            <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                <h6 class="m-0 font-weight-bold text-primary">
                    <i class="fas fa-chart-pie me-2"></i>
                    Kategori Dağılımı
                </h6>
            </div>
            <div class="card-body">
                <div class="chart-pie pt-4 pb-2">
                    <canvas id="categoryChart"></canvas>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Recent Activities & Top Tenders -->
<div class="row">
    <!-- Recent Activities -->
    <div class="col-lg-6 mb-4">
        <div class="card shadow">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">
                    <i class="fas fa-clock me-2"></i>
                    Son Aktiviteler
                </h6>
            </div>
            <div class="card-body">
                <div class="timeline">
                    @if (Model?.AktifIhaleler != null)
                    {
                        @foreach (var aktivite in Model.AktifIhaleler)
                        {
                            <div class="timeline-item">
                                <div class="timeline-marker"></div>
                                <div class="timeline-content">
                                    <h6 class="timeline-title">@aktivite.IhaleAdi</h6>
                                    <p class="timeline-text">@aktivite.Aciklama</p>
                                    <small class="text-muted">
                                        <i class="fas fa-clock me-1"></i>
                                        @aktivite.KayitTarihi.ToString("dd.MM.yyyy HH:mm")
                                    </small>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <p class="text-muted text-center">Henüz aktivite bulunmuyor.</p>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Top Tenders -->
    <div class="col-lg-6 mb-4">
        <div class="card shadow">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">
                    <i class="fas fa-star me-2"></i>
                    Öne Çıkan İhaleler
                </h6>
            </div>
            <div class="card-body">
                @if (Model?.AktifIhaleler != null)
                {
                    @foreach (var ihale in Model.AktifIhaleler)
                    {
                        <div class="media mb-3">
                            <div class="media-body">
                                <h6 class="mt-0 mb-1">
                                    <a href="/Ihale/Details/@ihale.Id" class="text-decoration-none">
                                        @ihale.IhaleAdi
                                    </a>
                                </h6>
                                <p class="text-muted small mb-1">@ihale.Aciklama</p>
                                <div class="d-flex justify-content-between">
                                    <small class="text-success">
                                        <i class="fas fa-money-bill-wave me-1"></i>
                                        @ihale.YaklasikMaliyet.ToString("C")
                                    </small>
                                    <small class="text-muted">
                                        <i class="fas fa-calendar me-1"></i>
                                        @ihale.IhaleBitisTarihi.ToString("dd.MM.yyyy")
                                    </small>
                                </div>
                            </div>
                        </div>
                        <hr class="my-2">
                    }
                }
                else
                {
                    <p class="text-muted text-center">Henüz ihale bulunmuyor.</p>
                }
            </div>
        </div>
    </div>
</div>

<!-- Risk Analysis Summary -->
<div class="row">
    <div class="col-12">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">
                    <i class="fas fa-exclamation-triangle me-2"></i>
                    Risk Analizi Özeti
                </h6>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-3 text-center">
                        <div class="risk-indicator risk-low">
                            <i class="fas fa-check-circle fa-2x mb-2"></i>
                            <h4>@(Model?.DusukRisk ?? 0)</h4>
                            <p class="text-muted">Düşük Risk</p>
                        </div>
                    </div>
                    <div class="col-md-3 text-center">
                        <div class="risk-indicator risk-medium">
                            <i class="fas fa-exclamation-circle fa-2x mb-2"></i>
                            <h4>@(Model?.OrtaRisk ?? 0)</h4>
                            <p class="text-muted">Orta Risk</p>
                        </div>
                    </div>
                    <div class="col-md-3 text-center">
                        <div class="risk-indicator risk-high">
                            <i class="fas fa-times-circle fa-2x mb-2"></i>
                            <h4>@(Model?.YuksekRisk ?? 0)</h4>
                            <p class="text-muted">Yüksek Risk</p>
                        </div>
                    </div>
                    <div class="col-md-3 text-center">
                        <a href="/Analiz/Risk" class="btn btn-outline-primary">
                            <i class="fas fa-chart-line me-2"></i>
                            Detaylı Analiz
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .border-left-primary {
        border-left: 4px solid #4e73df !important;
    }
    .border-left-success {
        border-left: 4px solid #1cc88a !important;
    }
    .border-left-info {
        border-left: 4px solid #36b9cc !important;
    }
    .border-left-warning {
        border-left: 4px solid #f6c23e !important;
    }

    .timeline {
        position: relative;
        padding-left: 30px;
    }

    .timeline-item {
        position: relative;
        margin-bottom: 20px;
    }

    .timeline-marker {
        position: absolute;
        left: -35px;
        top: 5px;
        width: 10px;
        height: 10px;
        background: #4e73df;
        border-radius: 50%;
    }

    .timeline-marker::before {
        content: '';
        position: absolute;
        left: 4px;
        top: 10px;
        width: 2px;
        height: 40px;
        background: #e3e6f0;
        z-index: -1;
    }

    .timeline-item:last-child .timeline-marker::before {
        display: none;
    }

    .risk-indicator {
        padding: 20px;
        border-radius: 10px;
        margin-bottom: 20px;
    }

    .risk-low {
        background-color: rgba(28, 200, 138, 0.1);
        color: #1cc88a;
    }

    .risk-medium {
        background-color: rgba(246, 194, 62, 0.1);
        color: #f6c23e;
    }

    .risk-high {
        background-color: rgba(231, 74, 59, 0.1);
        color: #e74a3b;
    }

    .chart-area {
        position: relative;
        height: 300px;
    }

    .chart-pie {
        position: relative;
        height: 300px;
    }
</style>

